 
<!doctype html>
<html>
<head>
  <title><%= locals.title %> - Create Patient</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="Company Web Solutions">
  <meta name="keywords" content="Company Web Solutions">
  <link href="/public/css/core.min.css" rel="stylesheet">
  <link href="/public/css/thesaas.min.css" rel="stylesheet">
  <link href="/public/css/styles.css" rel="stylesheet">
  <link href='/public/javascript/fullcalendar/fullcalendar.print.css' rel='stylesheet' media='print' />
  <link href='/public/javascript/fullcalendar/fullcalendar.css' rel='stylesheet' />
  <script src="/js/jquery.js"></script>
  <script src="/js/jquery.min.js"></script>
</head>
<body>
  <div class="container-fluid bg-gray" style="padding:0px;">
    <!-- THIS IS THE NAVBAR -->
    <%- include("../templates/navbar.ejs") %>

    <!-- Header -->
    <header class="header header-inverse" style="background-image: url(/public/images/child-patient.jpg);">
      <div class="overlay" style="background-color: #000; position: absolute; height: 100%; top: 0; right: 0; bottom: 0; left: 0; opacity: 0.7;"></div>
      <div class="container text-center">

        <div class="row">
          <div class="col-12 col-lg-8 offset-lg-2">
            <h2 class="text-warning">Patients Details <!-- Fitness options--> </h2>
            <br>
            <p class="fs-20 opacity-70">"Create a new patient for appointments".</p>
          </div>
        </div>

      </div>
    </header>
    <!-- END Header -->

    <div class="container py-40">
  	  <div class="row">
       	<div class="col-md-12 card py-40 px-40">
         	<div>
         		<h3>Add new patient <span class="pull-right" style="font-size: 15px;"><a href="/patients/list">View all patients</a></span></h3><hr>
            <div class="col-md-8">
              <form action="/patients/create" method="post">
                <div class="form-group">
                  <label>Name</label>
                  <input class="form-control" type="text" name="name" required>
                </div>

                <div class="form-group">
                  <label>Email</label>
                  <input class="form-control" type="text" name="email" required>
                </div>

                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label>Birthday</label>
                      <input class="form-control" type="date" name="birthday" id="birthday" required>
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-group">
                      <label>Age</label>
                      <input class="form-control" type="number" name="age" id="age" required>
                    </div>
                  </div>
                </div>
              
                <div class="form-group">
                  <label>Address</label>
                  <input class="form-control" type="text" name="address" required>
                </div>

                <div class="form-group">
                  <label>Phone</label>
                  <input class="form-control" type="text" name="phone" required>
                </div>
               
                <div>
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <button type="submit" class="btn btn-warning">Add New Patient</button>
                </div>
              </form>
            </div>
            
         	</div>
       	</div>
      </div>
    </div>
  </div>
  <%- include("../templates/footer.ejs") %>
  <script type="text/javascript">
    function getDateValue(dateString){
      var date  = new Date(dateString);
      var day   = date.getDate();
      var month = date.getMonth() + 1;
      var year  = date.getFullYear();

      var currentDate = new Date();
      var currentYear = currentDate.getFullYear();

      var age = currentYear - year;

      return (age);
    }

    $('#birthday').change(function(){
      $('#age').val(getDateValue($('#birthday').val()));
    });
  </script>
  <script src="/public/javascript/core.min.js"></script>
  <script src="/public/javascript/thesaas.min.js"></script>
  </body>
</html>

